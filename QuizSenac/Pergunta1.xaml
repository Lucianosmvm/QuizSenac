<Page x:Class="QuizSenac.Pergunta1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizSenac"
      mc:Ignorable="d" 
      Title="Pergunta1"
      WindowHeight="Auto" WindowWidth="Auto">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Fundo ocupa toda a tela -->
        <Image x:Name="img_per1" Source="/Quiz Senac 2025 (6).png"
               Stretch="Fill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- Seus elementos continuam aqui -->
        <Label x:Name="lab_per1" Content="Pergunta" HorizontalAlignment="Left" Margin="35,41,0,0" VerticalAlignment="Top" Height="56" Width="243" Foreground="#FF103F6B" FontSize="24" FontFamily="Sans Serif Collection" FontWeight="Bold"/>
        <TextBlock x:Name="txt_pergunta" HorizontalAlignment="Left" Margin="44,111,0,0" TextWrapping="Wrap" Text="pergunta" VerticalAlignment="Top" Height="48" Width="361" FontSize="20" FontFamily="Sans Serif Collection"/>

        <!-- Botões A, B, C, D -->
        <Button x:Name="btn_A" Height="40" BorderThickness="0" Background="{x:Null}" HorizontalAlignment="Left" Margin="41,175,0,0" Width="561" VerticalAlignment="Top" HorizontalContentAlignment="Left" Click="btn_A_Click">
            <Border Background="#223244" CornerRadius="8" BorderBrush="White" BorderThickness="2">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Border Width="25" Height="20" Background="White" CornerRadius="4" Margin="5">
                        <TextBlock Text="A" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold" Margin="0,0,0,2"/>
                    </Border>
                    <TextBlock x:Name="alternativa_A" Text="text" VerticalAlignment="Center" Foreground="White" FontSize="16" Margin="5,0,10,0"/>
                </StackPanel>
            </Border>
        </Button>

        <Button x:Name="btn_B" Height="40" BorderThickness="0" Background="{x:Null}" HorizontalAlignment="Left" Margin="42,216,0,0" Width="559" VerticalAlignment="Top" HorizontalContentAlignment="Left" Click="btn_B_Click">
            <Border Background="#223244" CornerRadius="8" BorderBrush="White" BorderThickness="2">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Border Width="25" Height="20" Background="White" CornerRadius="4" Margin="5">
                        <TextBlock Text="B" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
                    </Border>
                    <TextBlock x:Name="alternativa_B" Text="text" VerticalAlignment="Center" Foreground="White" FontSize="16" Margin="5,0,10,0"/>
                </StackPanel>
            </Border>
        </Button>

        <Button x:Name="btn_C" Height="40" BorderThickness="0" Background="{x:Null}" HorizontalAlignment="Left" Margin="42,260,0,0" Width="559" VerticalAlignment="Top" HorizontalContentAlignment="Left" Click="btn_C_Click">
            <Border Background="#223244" CornerRadius="8" BorderBrush="White" BorderThickness="2">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Border Width="25" Height="20" Background="White" CornerRadius="4" Margin="5">
                        <TextBlock Text="C" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
                    </Border>
                    <TextBlock x:Name="alternativa_C" Text="text" VerticalAlignment="Center" Foreground="White" FontSize="16" Margin="5,0,10,0"/>
                </StackPanel>
            </Border>
        </Button>

        <Button x:Name="btn_D" Height="40" BorderThickness="0" Background="{x:Null}" HorizontalAlignment="Left" Margin="42,304,0,0" Width="559" VerticalAlignment="Top" HorizontalContentAlignment="Left" Click="btn_D_Click">
            <Border Background="#223244" CornerRadius="8" BorderBrush="White" BorderThickness="2">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Border Width="25" Height="20" Background="White" CornerRadius="4" Margin="5">
                        <TextBlock Text="D" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
                    </Border>
                    <TextBlock x:Name="alternativa_D" Text="text" VerticalAlignment="Center" Foreground="White" FontSize="16" Margin="5,0,10,0"/>
                </StackPanel>
            </Border>
        </Button>

        <!-- Tempo -->
        <Label x:Name="lb_Tempo" Content="" HorizontalAlignment="Left" Margin="273,17,0,0" VerticalAlignment="Top" Width="66" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Sans Serif Collection"/>
        <Label Content="Tempo" HorizontalAlignment="Left" Margin="282,-6,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Sans Serif Collection" FontWeight="Bold"/>
    </Grid>
</Page>
